{
  "name": "lumaqa-cypress-cucumber",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cy:clean": "rm -rf cypress/reports cypress/screenshots cypress/videos",
    "cy:run": "cypress run --reporter cypress-mochawesome-reporter",
    "cy:report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged-report.json",
    "cy:report:generate": "marge cypress/reports/merged-report.json --reportDir cypress/reports/html-report --inline",
    "test": "npm run cypress:run"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.1.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.6",
    "@types/node": "^18.11.18",
    "cypress": "^15.2.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^3.8.4",
    "esbuild": "^0.25.9",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "marge": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
    "cypress-cucumber-preprocessor": {
      "stepDefinitions": "cypress/e2e/step_definitions/**/*.{js,ts}"
    }
}
